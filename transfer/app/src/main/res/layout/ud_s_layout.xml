<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:layout_marginLeft="10dip"
                android:text="/data/androtrace : Total "
                ></TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text=""
                android:background="#66cc00"
                android:textSize="2dp"
                ></TextView>
            <TextView android:id="@+id/io_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="20dip"
                android:text="/io"
                ></TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:text=""
                android:background="#ffcc99"
                android:textSize="2dp"
                ></TextView>

            <TextView android:id="@+id/io_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="Empty"
                ></TextView>

            <TextView android:id="@+id/filels_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:text="/filels"
                ></TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:text=""
                android:background="#ffcc99"
                android:textSize="2dp"
                ></TextView>
            <TextView android:id="@+id/filels_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="Empty"
                ></TextView>

            <TextView android:id="@+id/mem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:text="/mem"
                ></TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:text=""
                android:background="#ffcc99"
                android:textSize="2dp"
                ></TextView>

            <TextView android:id="@+id/mem_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="Empty"
                ></TextView>

            <TextView android:id="@+id/mdetail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:text="/mdetail"
                ></TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:text=""
                android:background="#ffcc99"
                android:textSize="2dp"
                ></TextView>
            <TextView android:id="@+id/mdetail_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="Empty"
                android:layout_marginBottom="30dip"
                ></TextView>
            <Button android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="Refresh"
                android:layout_gravity="right"
                android:layout_marginBottom="20dip"
                android:layout_marginRight="20dip"

                ></Button>


        </LinearLayout>

    </ScrollView>
 
</RelativeLayout>